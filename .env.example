# Soul-Bot Environment Configuration

# Node environment
NODE_ENV=development

# Server configuration
PORT=3000
WEB_DASHBOARD_PORT=3001

# Trading settings
TRADING_TIMEFRAME=1h
TRADING_INTERVAL=60000
MAX_TRADES_PER_DAY=10
RISK_LEVEL=medium
INITIAL_BALANCE=1000
TRADING_FEE=0.0005
SLIPPAGE=0.001

# ML model settings
ML_MODEL_PATH=./models/default-model
USE_GPU=false
PREDICTION_CONFIDENCE=0.7
DATA_POINTS=100
LOG_LEVEL=info
ML_UPDATE_INTERVAL=15000
ML_ACCURACY_DISPLAY=true

# Dashboard settings
ENABLE_DASHBOARD=true
DEBUG_MODE=true
ENABLE_ML_DEBUG=true
FORCE_ML_UPDATES=true

# Wallet connection settings
ENABLE_WALLET_CONNECT=true
DEFAULT_WALLET_MODE=demo
WALLET_TIMEOUT=30000
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOL_WALLET_ADDRESS=

# API keys (add your own)
COINMARKETCAP_API_KEY=
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Database settings (if used)
DB_HOST=localhost
DB_PORT=27017
DB_NAME=soul_bot
DB_USER=
DB_PASSWORD= 